<h1>Question:</h1>
<h1><%= @question.text %></h1>

<h2>Options:</h2>
<% @question.options.each do |option| %>
  <p>
    <%= option.text %>
  </p>
<% end %>

<h2>Add an option:</h2>
<%= form_for([@question, @question.options.build]) do |f| %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to 'Destroy', question_path(@question), method: :delete, data: { confirm: 'Delete question?'} %></p>